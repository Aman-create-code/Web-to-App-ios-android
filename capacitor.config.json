{
  "appId": "com.shadowchat.network",
  "appName": "Shadowchat",
  "webDir": "www",
  "bundledWebRuntime": false,
  "server": {
    "url": "PLACEHOLDER_URL",
    "cleartext": true,
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 3000,
      "backgroundColor": "#020617",
      "androidSplashResourceName": "splash",
      "showSpinner": true,
      "androidScaleType": "CENTER_CROP"
    },
    "Keyboard": {
      "resize": "body",
      "style": "dark"
    }
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "buildOptions": {
      "releaseType": "APK"
    }
  }
}
